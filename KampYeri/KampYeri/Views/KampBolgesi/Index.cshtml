@model List<KampBolgesiViewModel>

<a class="btn btn-primary" asp-action="Create" asp-controller="KampBolgesi">Yeni Ürün Ekle</a>

<table class="table table-striped table-hover">
    <tr>
        <td>#</td>
        <td>Ürün Ad</td>
        <td>Ürün Cadirlar</td>
        <td>Ürün Kapasite</td>
        <td>Ürün İşlemleri</td>


    </tr>
    @{
        foreach (var item in Model)
        {
            <tr>
                <td>@item.RowNum</td>
                <td>@item.Ad</td>
                <td>@{
                    foreach (var cadir in item.Cadirlar)
                        {
                            <td>cadir.Ad</td>
                        }
                }<td>
                <td>
                    <a class="btn btn-info" asp-controller="KampBolgesi" asp-action="Edit" asp-route-id="@item.Id">Düzenle</a>
                     <a class="btn btn-danger" asp-controller="KampBolgesi" asp-action="Delete" asp-route-id="@item.Id">Sil</a>
                </td>

            </tr>
        }
    }
    @*           <a class="btn btn-secondary" asp-controller="Product" asp-action="Detail" asp-route-id="@item.Id">Detay</a> *@

</table>